<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.giedrius.plugin"
      version="0.1.0">
    <name>Calendar</name>
    <description>Sample PhoneGap Calendar Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,calendar</keywords>


    <js-module src="www/calendar.js" name="Calendar">
        <clobbers target="window.calendar" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Calendar">
                <param name="android-package" value="com.giedrius.plugin.Calendar"/>
            </feature>
        </config-file>

        <source-file src="src/android/Calendar.java" target-dir="src/com/giedrius/plugin" />
		<source-file src="src/android/LFOpen.java" target-dir="src/com/giedrius/plugin" />
		<source-file src="libs/lfopen-api.jar" target-dir="libs" />
		<source-file src="accessory_data.xml" target-dir="res/xml" />
     </platform>          
</plugin>
